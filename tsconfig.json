{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jasmine"
    ]
  },
  "files": [
    "./src/**/*.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "compiled",
    "debug": true,
    "skipMetadataEmit": false,
    "strictMetadataEmit": true
  }
}